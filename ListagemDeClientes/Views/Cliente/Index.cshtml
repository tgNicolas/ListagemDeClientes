@model IEnumerable<Cliente>






@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert bg-success text-light">
        @TempData["MensagemSucesso"]
    </div>
}
    <div class="container-1">
        <div>
        <a class="nav-link" asp-controller="Home" asp-action="Index">
            Voltar ao Início
        </a>
        </div>

        <div class="groupBtn" >
        <a class="btnAdd text-dark" asp-area="" asp-controller="Cliente" asp-action="Cadastrar">Adicionar</a>

        </div>
  


        <table class="table table-striped text-center text-light">
            <thead>
                <tr>
                    <th scope="col">Nome :</th>
                    <th scope="col">Email :</th>
                    <th scope="col">Telefone :</th>
                    <th scope="col">Cargo :</th>
                    <th>Ações :</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var itens in Model)
                    {
                        <tr>
                            <th class="info-table">@itens.Nome</th>
                            <td class="info-table">@itens.Email</td>
                            <td class="info-table">@itens.Telefone</td>
                            <td class="info-table">@itens.Cargo</td>

                            <td>
                                <div class="d-flex justify-content-between align-items-lg-center">
                                    <a class="btn btn-warning" asp-controller="Cliente" asp-action="Editar" asp-route-id="@itens.Id">Editar</a>
                                    <a class="btn btn-danger" asp-controller="Cliente" asp-action="Excluir" asp-route-id="@itens.Id">Excluir</a>
                                </div>
                            </td>


                        </tr>
                    }
                }

        </table>
    </div>

   


  
   